{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,

    // FIX PALING PENTING
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
