generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id           Int      @id @default(autoincrement())
  image        String
  title        String
  category     String
  academicYear String
  code         String   @unique
  description  String
  link         String
  publishDate  DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt  // FIX PALING PENTING
}


model projectsubmission {
  id                 Int      @id @default(autoincrement())
  fullName           String
  email              String
  phoneNumber        String
  projectTitle       String

  //  Error karena required tanpa default, sementara tabel sudah punya data

  projectType        String   @default("web")
  projectDescription String   @db.LongText
  status             String   @default("pending")
  adminNote          String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model teammember {
  id             Int         @id @default(autoincrement())
  name           String
  role           String
  email          String
  image          String?     @db.LongText
  github         String?
  linkedin       String?
  facebook       String?
  instagram      String?
  website        String?
  category       String
  studyProgram   String?
  education      String?
  specialization String?
  projectId      Int
  teamproject    teamproject @relation(fields: [projectId], references: [id], map: "TeamMember_projectId_fkey")

  @@index([projectId], map: "TeamMember_projectId_fkey")
}

model teamproject {
  id         Int          @id @default(autoincrement())
  teamTitle  String
  teammember teammember[]
}

model trainingregistration {
  id            Int      @id @default(autoincrement())
  name          String
  email         String
  phone         String
  trainingTitle String
  trainingType  String
  batch         String
  notes         String?
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model lectureraccount {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  createdAt DateTime @default(now())
}
