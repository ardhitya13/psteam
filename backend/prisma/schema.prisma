generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id              Int              @id @default(autoincrement())
  name            String
  email           String           @unique
  password        String
  role            String
  createdAt       DateTime         @default(now())
  lecturerprofile lecturerprofile?
}

model product {
  id           Int      @id @default(autoincrement())
  image        String
  title        String
  category     String
  academicYear String
  code         String   @unique(map: "Product_code_key")
  description  String
  link         String
  publishDate  DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model projectsubmission {
  id                 Int      @id @default(autoincrement())
  fullName           String
  email              String
  phoneNumber        String
  projectTitle       String
  projectDescription String   @db.LongText
  status             String   @default("pending")
  adminNote          String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  projectType        String   @default("web")
}

model teammember {
  id             Int         @id @default(autoincrement())
  name           String
  role           String
  email          String?
  image          String?
  github         String?
  linkedin       String?
  facebook       String?
  instagram      String?
  website        String?
  category       String
  studyProgram   String?
  education      String?
  specialization String?
  projectId      Int
  project        teamproject @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model teamproject {
  id         Int          @id @default(autoincrement())
  teamTitle  String
  teammember teammember[]
}

model trainingregistration {
  id            Int      @id @default(autoincrement())
  name          String
  email         String
  phone         String
  trainingTitle String
  trainingType  String
  batch         String
  notes         String?
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model training {
  id               Int      @id @default(autoincrement())
  title            String
  price            Int
  thumbnail        String?
  description      String?
  organizer        String?  @default("PSTeam Academy")
  certificate      String?
  costDetails      String?  @db.LongText
  created_at       DateTime @default(now())
  duration         String?
  instructor       String?
  location         String?
  requirements     String?  @db.LongText
  rundown          String?  @db.LongText
  schedule         String?  @db.LongText
  shortDescription String?
  type             String   @default("web")
  updated_at       DateTime @default(now()) @updatedAt
}

model lecturerprofile {
  id               Int                @id @default(autoincrement())
  userId           Int                @unique
  studyProgram     String?
  specialization   String?
  imageUrl         String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @default(now()) @updatedAt
  educationhistory educationhistory[]
  user             user               @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model educationhistory {
  id         Int             @id @default(autoincrement())
  lecturerId Int
  degree     String?
  university String?
  major      String?
  lecturer   lecturerprofile @relation(fields: [lecturerId], references: [id], onDelete: Cascade)

  @@index([lecturerId])
}
